/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128 rpx;
  height: 128 rpx;
  margin: 20 rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container {
  padding-top: 0
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result .weui-cell__bd {
  padding: 2px 0 2px 20px;
  color: #666;
}

.searchbar-result:before {
  display: none;
}

.hot-search-container {
  padding: 40rpx 50rpx;
}
.hot-search-label {
  font-size: 12px;
  margin: 0 0 8px 6px;
}

.tag {
  font-size: 12px;
  color: #ffffff;
  padding: 2px 8px;
  display: inline-block;
  border-radius: 4px;
  margin: 4px 6px;
  background-color: #1890ff;
}
.tag:active {
  background-color: #186cef;
}
.capture-wrapper {
  width: 100%;
  position: fixed;
  bottom: 50rpx;
  text-align: center;
}
.capture {
  width: 60rpx;
  height: 60rpx;
  background-color: #186cef;
  padding: 24rpx;
  border-radius: 50%;
}
.voice {
  width: 60rpx;
  height: 40rpx;
  vertical-align: middle;
}